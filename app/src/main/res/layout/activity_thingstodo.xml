<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >



    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Things to do quarantine "
        android:textSize="35dp"


        />

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Meditate"
        android:layout_below="@+id/t1"
        android:layout_marginTop="20dp"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Watch something that makes you laugh"
        android:layout_below="@+id/t2"
        android:layout_marginTop="20dp"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Stretch or work out."
        android:layout_below="@+id/t3"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        />


    <TextView
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Read a book or listen to a prodcast."
        android:layout_below="@+id/t4"
        android:layout_marginTop="20dp"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/t6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Watch films."
        android:layout_below="@+id/t5"
        android:layout_marginTop="20dp"
        android:textSize="30dp"

        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Make healthy foods."
        android:layout_below="@+id/t6"
        android:layout_marginTop="20dp"
        android:textSize="30dp"

        />



</RelativeLayout>